<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white">

    <!-- 제목 -->
    <TextView
        android:id="@+id/tvConfirmTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="예약 내용 확인"
        android:textColor="#190848"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="12dp" />

    <!-- 부제 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="아래 내용을 확인해주세요."
        android:textColor="#6B7280"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="18dp" />

    <!-- 공통 스타일: 박스 -->
    <!-- 강의실 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp"
        android:background="@drawable/bg_confirm_box"
        android:layout_marginBottom="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강의실"
            android:textColor="#6B7280"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvConfirmRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#111827"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            android:text="다산관 301호" />
    </LinearLayout>

    <!-- 예약 시간 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp"
        android:background="@drawable/bg_confirm_box"
        android:layout_marginBottom="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예약 시간"
            android:textColor="#6B7280"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvConfirmTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#111827"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            android:text="수요일 10:00 - 12:00" />
    </LinearLayout>

    <!-- 예약자 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp"
        android:background="@drawable/bg_confirm_box"
        android:layout_marginBottom="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예약자"
            android:textColor="#6B7280"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvConfirmUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#111827"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            android:text="김서율 (컴퓨터공학과)" />
    </LinearLayout>

    <!-- 예약 목적 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp"
        android:background="@drawable/bg_confirm_box"
        android:layout_marginBottom="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예약 목적"
            android:textColor="#6B7280"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvConfirmPurpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#111827"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            android:text="미팅" />
    </LinearLayout>

    <!-- 예약 인원 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp"
        android:background="@drawable/bg_confirm_box"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예약 인원"
            android:textColor="#6B7280"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvConfirmPeople"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#111827"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            android:text="9명" />
    </LinearLayout>

    <!-- 확인 버튼 -->
    <Button
        android:id="@+id/btnConfirmSubmit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="확인"
        android:textColor="@android:color/white"
        android:backgroundTint="#190848"
        android:textSize="16sp" />

    <!-- 취소 -->
    <Button
        android:id="@+id/btnConfirmCancel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="취소"
        android:textColor="#190848"
        android:backgroundTint="#E0E0E0"/>

</LinearLayout>
